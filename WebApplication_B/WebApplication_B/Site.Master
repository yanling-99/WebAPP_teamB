                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                     <%-- 標題LOGO OTEA+--%>
                    <a class="navbar-brand " runat="server" href="~/Home">OTEA+<br><br></a>
                    
                </div>

                <%-- 下拉選單 --%>
                <div class="collapse navbar-collapse" >
                    <%-- 下拉選單  Product --%>
                    <div class="nav navbar-nav " style="padding-left:20px">
                        <div class="dropdown">
                            <button id="dLabel"  type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" 
                                style="font-size:20px; width:120px; height:30px; border-color:transparent; background-color:#8B5A2B">
                                Product
                                <span class="caret"></span>
                            </button>

                            <ul class="dropdown-menu" aria-labelledby="dLabel">
                                <li><a runat="server" href="~/Product/Search">Search</a></li>
                                <li><a runat="server" href="~/Product/Edit">Edit</a></li>
                            </ul>
                        </div>
                    </div>

                    <%--  下拉選單  Trans  --%>
                    <div class="nav navbar-nav " >
                        <div class="dropdown">
                            <button id="dLabe2"  type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" 
